<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_marginTop="10dp"
        tools:background="@color/black"
        android:background="@drawable/card_view_behavior"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_marginBottom="35dp"
                android:textAlignment="center"
                android:textColor="@color/custom_white_2"
                android:textSize="15sp"
                android:fontFamily="@font/wix_made_for_display_bold"
                android:text="Problem name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="55dp"
                android:textColor="@color/custom_white_2"
                android:textSize="15sp"
                android:fontFamily="@font/wix_made_for_display_bold"
                android:text="Date and time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginEnd="25dp"
                android:textColor="@color/custom_white_2"
                android:textSize="15sp"
                android:fontFamily="@font/wix_made_for_display_bold"
                android:text="Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >


            <TextView
                android:layout_marginBottom="35dp"
                android:textColor="@color/custom_white_2"
                android:id="@+id/problemName"
                android:textSize="15sp"
                android:fontFamily="@font/wix_made_for_display_bold"
                tools:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="35dp"
                android:textColor="@color/custom_white_2"
                android:id="@+id/problemDateAndTime"
                android:textSize="15sp"
                android:fontFamily="@font/wix_made_for_display_bold"
                tools:text="date and \ntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/circle"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/circle"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    />

                <TextView
                    android:textColor="@color/custom_white_2"
                    android:layout_marginStart="5dp"
                    android:id="@+id/problemStatus"
                    android:textSize="15sp"
                    android:fontFamily="@font/wix_made_for_display_bold"
                    tools:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>