<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.PinActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >




    <LinearLayout
        android:padding="20dp"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main"
        >

    <LinearLayout
        android:layout_marginTop="25dp"
        android:padding="20dp"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <View
            android:layout_marginStart="15dp"
            android:background="@drawable/circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="15dp"
            />




        <View
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/line"
            android:layout_marginEnd="15dp"
            />

        <View
            android:background="@drawable/circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="15dp"
            />

        <View
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/line"
            android:layout_marginEnd="15dp"
            />

        <LinearLayout
            android:id="@+id/activePage"
            android:background="@drawable/circle_only_width"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            >

            <View
                android:background="@drawable/circle"
                android:layout_width="8dp"
                android:layout_height="8dp"

                />

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/usernameTextView"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wix_made_for_display_bold"
            android:text="username"
            android:textColor="@color/white"
           />

        <TextView
            android:id="@+id/pinText"
            android:padding="20dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wix_made_for_display_bold"
            android:text="@string/enter_your_pin"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/pinCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/pin_counter_first_circle"
                android:background="@drawable/circle_pin_counter"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="15dp"
                />

            <View
                android:id="@+id/pin_counter_second_circle"
                android:background="@drawable/circle_pin_counter"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="15dp"
                />

            <View
                android:id="@+id/pin_counter_third_circle"
                android:background="@drawable/circle_pin_counter"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="15dp"
                />

            <View
                android:id="@+id/pin_counter_fourth_circle"
                android:background="@drawable/circle_pin_counter"
                android:layout_width="8dp"
                android:layout_height="8dp"
                />




        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:id="@+id/pinButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pin_button_one"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_two"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="2"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_three"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="3"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pin_button_four"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="4"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_five"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="5"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_six"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pin_button_seven"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_eight"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="8"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <Button
                    android:id="@+id/pin_button_nine"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="9"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clearImageView"
                android:background="@drawable/clear_button_behavior"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="35dp"
                />

                <Button
                    android:id="@+id/pin_button_zero"
                    android:background="@drawable/pin_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="0"
                    android:textSize="25sp"
                    android:textColor="@color/custom_white_2"
                    android:fontFamily="@font/wix_made_for_display_semi_bold"
                    android:layout_marginEnd="35dp"
                    />

                <ImageView
                    android:id="@+id/logOutImageView"
                    android:background="@drawable/log_out_button_behavior"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    />


            </LinearLayout>


            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/button_behavior"
                android:layout_marginTop="30dp"
                android:text="@string/_continue"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/wix_made_for_display_semi_bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                />



        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>